{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block header %}
	{{ include('header.html.twig') }}
{% endblock %}

{% block footer %}
	{{ include('footer.html.twig') }}

{% endblock %}

{% block body %}
	<div class="countainer">
		<div class="card">
			<div class="card-body">
				<h5 class="card-title">{{demande.Habitant.prenom}}
					{{demande.Habitant.nom}}</h5>
				<p class="card-text">né(e) le
					{{ demande.Habitant.datenaissance | date('d-m-Y') }}
					à
					{{ demande.Habitant.lieunaissance }}</p>
				<p class="card-text">

					<ol class="list-group list-group-flush">
						<li class="list-group-item d-flex justify-content-between align-items-start">
							<div class="ms-2 me-auto">
								<div class="fw-bold">Fonction</div>
								{{ demande.Habitant.fonction}}
							</div>

						</li>
						<li class="list-group-item d-flex justify-content-between align-items-start">
							<div class="ms-2 me-auto">
								<div class="fw-bold">Téléphone</div>
								{{ demande.Habitant.telephone}}
							</div>

						</li>
						<li class="list-group-item d-flex justify-content-between align-items-start">
							<div class="ms-2 me-auto">
								<div class="fw-bold">Email</div>
								demande.Habitant.email
							</div>

						</li>
					</ol>
				</p>
			</div>
			{% if getNomFichier('imagerecent',demande.id) %}
				<img src="{{asset(getNomFichier('imagerecent',demande.id))}}" class="card-img-bottom" alt="imagerecent">
			{% else %}
				<strong>ABSENCE DE PHOTO RECENT</strong>
			{% endif %}


		</div>
		<div class="card mb-3">

			{% if getNomFichier('facture',demande.id) %}
				<img src="{{asset(getNomFichier('facture',demande.id))}}" class="card-img-top" alt="facture">
			{% else %}
				<strong>ABSENCE DE Facture pour cette demande</strong>
			{% endif %}

		</div>
		<!-- Example single danger button -->
		
		
        


        <div class="container text-center">
  <div class="row">
    <div class="col-sm py-1">
      <div class="btn-group">
			<button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
				Refuser la demande
			</button>
			<ul class="dropdown-menu">
				<li>
					<a class="dropdown-item" href="{{path('app_delegue_reponse_inscription',{id:demande.id,type:'refuser',motif:'di'})}}">Motif:Dossier Imcomplet</a>
				</li>
				<li>
					<a class="dropdown-item" href="{{path('app_delegue_reponse_inscription',{id:demande.id,type:'refuser',motif:'pnc'})}}">Motif: Personne Non Connue</a>
				</li>
				<li>
					<a class="dropdown-item" href="{{path('app_delegue_reponse_inscription',{id:demande.id,type:'refuser',motif:'a'})}}">Motif: Autres</a>
				</li>
			</ul>
		</div>
    </div>
    <div class="col-sm py-1">
      <div class="btn-group">
			<button type="button" class="btn btn-primary ">
				
				<a class="dropdown-item" href="{{path('app_delegue_reponse_inscription',{id:demande.id,type:'accepter'})}}">Accepter la demande</a>
			</button>
		</div>
    </div>
    <div class="col-sm py-1">
      <div class="btn-group">
			<button type="button" class="btn  btn-info ">
				<a class="dropdown-item" href="{{path('app_delegue_reponse_inscription',{id:demande.id,type:'nrf'})}}">Ne Rien Faire</a>
			</button>
		</div>
    </div>
  </div>
</div>


	</div>


{% endblock %}
