{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block header %}
	{{ include('header.html.twig') }}
{% endblock %}


{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}


	<article>

					<h1 class="text-black"style="text-align:center;">Génération Automatique D'un Certificat De Domicile</h1><br>

				</div>

				<div class="row g-3 justify-content-center text-black">

					<div class="col-md-7 col-lg-8">
						{{ form_start(registrationForm, {'attr': {'novalidate': ''}}) }}
						<div class="row g-3">
						   <div class="col-sm-6">
						{{ form_label(registrationForm.nom, 'NOM DU DEMANDEUR', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(registrationForm.nom) }}
						<div class="invalid-feedback">
							obligatoire!
						</div>
						<div class='text-danger'>
							{{ form_errors(registrationForm.nom) }}
						</div>
					</div>

					<div class="col-sm-6">
						{{ form_label(registrationForm.prenom, 'PRENOM DU DEMANDEUR', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(registrationForm.prenom) }}
						<div class="invalid-feedback">
							obligatoire!
						</div>
						<div class='text-danger'>
							{{ form_errors(registrationForm.prenom) }}
						</div>
					</div>
					<div class="col-sm-12">
						{{ form_label(registrationForm.lieunaissance, 'LIEU DE NAISSANCE DU DEMANDEUR', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(registrationForm.lieunaissance) }}
						<div class="invalid-feedback">
							obligatoire!
						</div>
						<div class='text-danger'>
							{{ form_errors(registrationForm.lieunaissance) }}
						</div>
					</div>

					<div class="col-sm-12">
						{{ form_label(registrationForm.datenaissance, 'DATE DE NAISSANCE DU DEMANDEUR', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(registrationForm.datenaissance) }}
						<div class="invalid-feedback">
							obligatoire!
						</div>
						<div class='text-danger'>
							{{ form_errors(registrationForm.datenaissance) }}
						</div>
					</div>


							<div class="col-sm-12">
								{{ form_label(registrationForm.fonction, 'FONCTION DU DEMANDEUR', {'label_attr': {'class': 'form-label'}}) }}
								{{ form_widget(registrationForm.fonction) }}
								<div class="invalid-feedback">
									obligatoire!
								</div>
								<div class='text-danger'>
									{{ form_errors(registrationForm.fonction) }}
								</div>
							</div>

							<div class="col-sm-12">
							
								{{ form_row(registrationForm.fournir,{ 'label': 'Générer' }) }}
							</div>

							


							{{ form_end(registrationForm) }}
						</div>
					</div>
				</main>
			</div>

			<div class="mx-auto" style="height: 200px;"></div>

		</div>
</article>
	{% endblock %}
